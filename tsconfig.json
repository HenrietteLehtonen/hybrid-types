{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "."
  },
  "include": [
    "*.ts",
    "src/types/DBTypes.ts",
    "src/types/index.ts",
    "src/types/MessageTypes.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
